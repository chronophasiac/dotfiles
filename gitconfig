	default = tracking
[color]
	ui = true
[alias]
	st = status -sb
	co = checkout
	br = branch
	ci = commit
	cia = commit -a
	aa = add -A
	lg = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
	type = cat-file -t
  dump = cat-file -p
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
