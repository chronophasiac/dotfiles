	name = Michael Raimondi
	email = zeno@pobox.com
[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input
[push]
	default = tracking
[color]
	ui = true
[alias]
	st = status -sb
	co = checkout
	br = branch
	ci = commit
	cia = commit -a
	aa = add -A
	lg = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
	type = cat-file -t
  dump = cat-file -p
[mergetool "sublime"]
	cmd = subl -w -n $MERGED
	trustExitCode = false
[merge]
	tool = sublime
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
