# Colorized listings
export CLICOLOR=1

# Colorized grep
export GREP_OPTIONS='--color=auto'

# Make libraries in /usr/local available to Python
export LD_RUN_PATH=/usr/local/lib

# Aliases
alias vi="vim"
alias a="atom"
alias gsup="git submodule foreach git pull && git submodule update --init --recursive"
alias vup="vagrant up && vagrant ssh"
alias vsh="vagrant ssh"
alias vex="vagrant suspend &; exit"

# Java
if [ -f /usr/libexec/java_home ]; then
	export JAVA_HOME=$(/usr/libexec/java_home)
else
	export JAVA_HOME=/usr/lib/jvm/default-java
fi

# Go
if [ -f $HOME/go/bin/go ]; then
 export PATH=$PATH:$HOME/go/bin
fi
export GOPATH=$HOME/Dropbox/go_projects
export PATH=$PATH:$GOPATH/bin
export GOROOT=$(go env GOROOT)
export PATH=$PATH:$GOROOT/bin

# Node version manager
export NVM_DIR=~/.nvm
if [ -f /usr/local/bin/brew ]; then
  source "$(brew --prefix nvm)/nvm.sh"
else
	[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # This loads nvm
fi

# Load rbenv shims and autocompletion
if [ -f $HOME/.rbenv/bin/rbenv ]; then
	export PATH="$HOME/.rbenv/bin:$PATH"
fi
if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi

# Preferred editor for local and remote sessions
if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR='vim'
else
  export EDITOR=$HOME/.editor
fi
export BUNDLER_EDITOR=$EDITOR
